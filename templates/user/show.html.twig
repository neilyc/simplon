{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
  <h1>Utilisateur</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ user.id }}</td>
      </tr>
      <tr>
        <th>Prénom</th>
        <td>{{ user.firstname }}</td>
      </tr>
      <tr>
        <th>Nom</th>
        <td>{{ user.name }}</td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info">Editer</a>
  <a href="{{ path('user_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
