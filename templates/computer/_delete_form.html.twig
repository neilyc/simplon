<form method="post" action="{{ path('computer_delete', {'id': computer.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cet ordinateur ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ computer.id) }}">
    <button class="btn btn-warning">Supprimer</button>
</form>
